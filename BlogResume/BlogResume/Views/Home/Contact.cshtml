
<link rel="stylesheet" href="~/css/contact.css">


<!--Main Container-->
<main id="main">
    <div class="container-fluid">
        <div class="banner-container">
            <div class="banner-wrapper">
                <div class="banner-box">
                    <div class="banner-side">
                        <h1 class="pad-top-20 c-white">
                            Contact
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-container container-fluid">
        <div class="container-wrapper">
            <section class="box-container">
                <div class="box-cover">
                    <div class="box-wrapper">
                        <div class="info-group">
                            <div class="info-row">
                                <i class="info-icon fa fa-home"></i>
                                <div class="info-content">
                                    <p class="info-txt">34b Văn Cao</p>
                                    <p class="info-txt">P. Phú Thọ Hòa, Q. Tân Phú, TP.HCM</p>
                                </div>
                            </div>

                            <div class="info-row">
                                <i class="info-icon fa fa-phone"></i>
                                <div class="info-content">
                                    <p class="info-txt">0908 432 264</p>
                                    <p class="info-txt">Monday to Friday</p>
                                </div>
                            </div>

                            <div class="info-row">
                                <i class="info-icon fa fa-envelope"></i>
                                <div class="info-content">
                                    <p class="info-txt">huahoangthanhbao@gmail.com</p>
                                    <p class="info-txt">Send me query anytime!</p>
                                </div>
                            </div>
                        </div>
                        <div class="message-container">
                            <h3>Get In Touch</h3>
                            <form>
                                <div class="message-form">
                                    <textarea class="message" placeholder="Enter message"></textarea>
                                    <div class="message-row">
                                        <div class="box-col-5">
                                            <input class="name" placeholder="Enter your name">
                                        </div>
                                        <div class="box-col-5">
                                            <input class="email" placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="message-row">
                                        <input class="subject" placeholder="Enter your subject">
                                    </div>
                                    <div class="message-row">
                                        <button class="send-button">SEND</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>
<!--End Main Container-->